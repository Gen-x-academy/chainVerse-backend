# Environment: development, production, or test
NODE_ENV=development

# Server port
PORT=3002

# Database connections
MONGODB_URI=mongodb://localhost:27017/chainverse
MONGODB_TEST_URI=mongodb://localhost:27017/chainverse_test

# JWT secret for token signing
JWT_SECRET=your_secure_jwt_secret_key_here

# Certificate download token expiry (seconds)
DOWNLOAD_TOKEN_EXPIRY=3600
BULK_DOWNLOAD_TOKEN_EXPIRY=7200

# Email credentials (use Gmail app password if 2FA enabled)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=xxxx xxxx xxxx xxxx

# Frontend base URL
BASE_URL=http://localhost:3000

# Google OAuth credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
CALLBACK_URL=http://localhost:3002/auth/google/callback

# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GUEST_WINDOW_MS=60000
RATE_LIMIT_GUEST_MAX=30
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX=100
RATE_LIMIT_PREMIUM_WINDOW_MS=60000
RATE_LIMIT_PREMIUM_MAX=200
RATE_LIMIT_ADMIN_WINDOW_MS=60000
RATE_LIMIT_ADMIN_MAX=500
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=false
RATE_LIMIT_KEY_PREFIX=rl:

# Redis (optional)
REDIS_URL=redis://localhost:6379
FORCE_REDIS=false
